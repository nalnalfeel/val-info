<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center"
        android:padding="20dp"
        android:background="@color/cardview_shadow_end_color"
        tools:context=".ProfileFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/fp_cv_round_picture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="130dp">

                <ImageView
                    android:id="@+id/fp_iv_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_default" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fp_btn_edit_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/fp_image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_photo" />
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/myPrime">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="About Me"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fp_text_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:gravity="left|center"
                    android:drawableStart="@drawable/ic_profile_aboutme"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/fp_text_nip_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:gravity="left|center"
                    android:drawableStart="@drawable/icon_profile_nip_fragment"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/fp_text_division"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:drawableStart="@drawable/ic_divisi_aboutme"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/fp_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_email_aboutme"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/fp_text_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_phonenumber_aboutme"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/fp_text_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_status_aboutme"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_settingAndHelp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/fp_text_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Contact"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_fp_contact"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:id="@+id/fp_text_tutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Tutorial"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_tutorial"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="10dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/fp_text_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Change Data"
                    android:drawableStart="@drawable/ic_change_password"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="100dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fr_profile_btn_logout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="100dp"
                android:text="Logout"
                android:textColor="@color/black"
                android:backgroundTint="@color/myPrime" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
